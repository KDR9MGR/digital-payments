# Sila API Configuration
SILA_APP_HANDLE=your_app_handle_here
SILA_PRIVATE_KEY=your_private_key_here
SILA_BASE_URL=https://sandbox.silamoney.com/0.2

# Server Configuration
PORT=8080
GIN_MODE=debug

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY_HOURS=24

# Database Configuration (if needed)
DATABASE_URL=your_database_url_here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Plaid Configuration (for account verification)
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret_key
PLAID_ENVIRONMENT=sandbox  # sandbox, development, or production
PLAID_WEBHOOK_URL=https://yourdomain.com/webhooks/plaid

# Stripe Configuration (for payment processing)
# Use placeholders here; do not commit real keys.
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_webhook_secret_here
STRIPE_ENVIRONMENT=test  # test or live

# Encryption for storing sensitive data
ENCRYPTION_KEY=your_32_byte_encryption_key_here